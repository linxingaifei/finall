# ===== 基础 =====
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

CONFIG_TARGET_ROOTFS_PARTSIZE=4096

CONFIG_DEVEL=y
CONFIG_CCACHE=y

# ===== LuCI =====
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# ===== 主题 =====
CONFIG_PACKAGE_luci-theme-argon=y

# ===== SSH =====
CONFIG_DROPBEAR_ECC=y
CONFIG_DROPBEAR_CURVE25519=y

# ===== Docker =====
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_containerd=y
CONFIG_PACKAGE_runc=y
CONFIG_PACKAGE_docker-compose=y

# ===== sing-box =====
CONFIG_PACKAGE_sing-box=y
CONFIG_PACKAGE_luci-app-sing-box=y

# ===== MetaCubeX =====
CONFIG_PACKAGE_luci-app-metacubex=y

# ===== PBR =====
CONFIG_PACKAGE_pbr=y
CONFIG_PACKAGE_luci-app-pbr=y

# ===== VPN =====
CONFIG_PACKAGE_openvpn-openssl=y
CONFIG_PACKAGE_luci-app-openvpn=y
CONFIG_PACKAGE_l2tp=y
CONFIG_PACKAGE_xl2tpd=y

# ===== QoS / tc =====
CONFIG_PACKAGE_tc=y
CONFIG_PACKAGE_kmod-sched-cake=y
CONFIG_PACKAGE_kmod-ifb=y

# ===== npc =====
CONFIG_PACKAGE_npc=y

# ===== 工具 =====
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-nft=y
